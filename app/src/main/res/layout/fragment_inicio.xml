<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_fondo"
    tools:context=".InicioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Barra de título -->
        <TextView
            android:id="@+id/txtTituloInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:padding="12dp" />

        <!-- Contenido centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/azul_muy_claro">

            <TextView
                android:id="@+id/lblTituloScanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escáner de Alumnos"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/azul_texto"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnEscanearInicio"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="ESCANEAR QR"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/azul_medio"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>