<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FD"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:gravity="center"
            android:padding="15dp"
            android:text="Acerca de mí"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/lblMiMatricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrícula: 2024XXXXX"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lblMiNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: Tu nombre completo"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lblMiEspecialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especialidad: Tecnologías de la Información"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/lblMiDomicilio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domicilio: Tu dirección"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#BBDEFB"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgMiFotoPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/foto_fer" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Mi información QR"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="#BBDEFB"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgQrPersonal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Código QR" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>